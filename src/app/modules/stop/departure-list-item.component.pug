a([routerLink]="['/passages', departure.tripId]",role="listitem")
    mat-list-item
        mat-icon(matListIcon,title="{{status}}") {{statusIcon}}
        span.pattern-text(*ngIf="delay!==false",[ngClass]="{'late':(delay>0),'early':(delay<0)}") {delay, plural, =0 {just now} =1 {one minute ago} other {{{minutes}} minutes ago}}
        h3(matLine) {{ departure?.patternText }} {{ departure?.direction }}
        p(matLine)
            span(title="Planned: {{departure?.plannedTime}}") {{time}}