mat-toolbar.main-toolbar(color="primary",[class.search-open]="searchOpen===true")
    button(mat-icon-button,(click)="toggleSidebar()",i18n-aria-label="Toggle Sidebar@@toggleSidebar",aria-label="Toggle Sidebar",role="button",aria-pressed="false")
        mat-icon {{searchOpen?"arrow_back":"menu"}}
    app-toolbar-search((focusSearch)="onFocusSearch($event)")
    button#btnSearch(mat-icon-button,(click)="toggleSearch()")
        mat-icon search
    ng-container(*ngIf="closeable")
        mat-divider([vertical]="true")
        button(mat-icon-button,[routerLink]="['/']")
            mat-icon close
app-route-loading-indicator